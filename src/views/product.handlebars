<div class="row justify-content-center">
    <div class="col-md-8">
        <a href="/" class="btn btn-outline-secondary mb-3">
            <i class="fas fa-arrow-left"></i> Volver a Productos
        </a>

        {{#if errorMessage}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> {{errorMessage}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="fas fa-eye"></i> {{product.title}}</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>ID:</strong> <small class="text-muted">{{product.id}}</small></p>
                        <p><strong>Título:</strong> {{product.title}}</p>
                        <p><strong>Descripción:</strong> {{product.description}}</p>
                        <p><strong>Código:</strong> {{product.code}}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Precio:</strong> <span class="fs-4 text-success">${{product.price}}</span></p>
                        <p><strong>Stock:</strong>
                            {{#if product.stock}}
                                <span class="badge bg-success">{{product.stock}} unidades</span>
                            {{else}}
                                <span class="badge bg-danger">Sin stock</span>
                            {{/if}}
                        </p>
                        <p><strong>Categoría:</strong> <span class="badge bg-primary">{{product.category}}</span></p>
                        <p><strong>Estado:</strong>
                            {{#if product.status}}
                                <span class="badge bg-success">Activo</span>
                            {{else}}
                                <span class="badge bg-secondary">Inactivo</span>
                            {{/if}}
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <form action="/products/{{product.id}}/delete" method="POST" style="display:inline"
                      onsubmit="return confirm('¿Seguro que deseas eliminar este producto?')">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-edit"></i> Modificar producto</h5>
            </div>
            <div class="card-body">
                <form action="/products/{{product.id}}/update" method="POST">
                    <div class="mb-2">
                        <label class="form-label">Título</label>
                        <input type="text" name="title" class="form-control" value="{{product.title}}" required />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Descripción</label>
                        <textarea name="description" class="form-control" rows="2" required>{{product.description}}</textarea>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Código</label>
                        <input type="text" name="code" class="form-control" value="{{product.code}}" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Precio</label>
                            <input type="number" name="price" class="form-control" step="0.01" value="{{product.price}}" required />
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Stock</label>
                            <input type="number" name="stock" class="form-control" value="{{product.stock}}" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Categoría</label>
                        <input type="text" name="category" class="form-control" value="{{product.category}}" required />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Guardar cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
