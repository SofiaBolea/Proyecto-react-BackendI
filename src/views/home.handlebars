<header class="text-center mb-4">
    <h1 class="display-5 text-primary">
        <i class="fas fa-boxes"></i> Gestión de Productos
    </h1>
</header>

{{#if errorMessage}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error:</strong> {{errorMessage}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

<div class="row">
    {{!-- Formulario para crear producto --}}
    <div class="col-md-4">
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-success text-white">
                <i class="fas fa-plus-circle"></i> Crear Nuevo Producto
            </div>
            <div class="card-body">
                <form action="/products" method="POST">
                    <input type="text" name="title" class="form-control mb-2" placeholder="Título del producto" required />
                    <input type="text" name="description" class="form-control mb-2" placeholder="Descripción" required />
                    <input type="text" name="code" class="form-control mb-2" placeholder="Código único (ej: AA-123)" required />
                    <div class="row">
                        <div class="col">
                            <input type="number" name="price" class="form-control mb-2" placeholder="Precio" step="0.01" required />
                        </div>
                        <div class="col">
                            <input type="number" name="stock" class="form-control mb-2" placeholder="Stock" required />
                        </div>
                    </div>
                    <input type="text" name="category" class="form-control mb-2" placeholder="Categoría" required />
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-save"></i> Agregar Producto
                    </button>
                </form>
            </div>
        </div>
    </div>

    {{!-- Tabla de productos --}}
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <span><i class="fas fa-list"></i> Listado de Productos</span>
                <span class="badge bg-light text-dark">{{products.length}} productos</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-tag"></i> Título</th>
                                <th><i class="fas fa-barcode"></i> Código</th>
                                <th><i class="fas fa-dollar-sign"></i> Precio</th>
                                <th><i class="fas fa-cubes"></i> Stock</th>
                                <th><i class="fas fa-folder"></i> Categoría</th>
                                <th class="text-end"><i class="fas fa-cogs"></i> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.title}}</td>
                                <td>{{this.code}}</td>
                                <td>${{this.price}}</td>
                                <td>
                                    {{#if this.stock}}
                                        <span class="badge bg-success">{{this.stock}}</span>
                                    {{else}}
                                        <span class="badge bg-danger">Sin stock</span>
                                    {{/if}}
                                </td>
                                <td>{{this.category}}</td>
                                <td class="text-end">
                                    <a href="/products/{{this.id}}" class="btn btn-sm btn-info me-1" title="Ver detalle">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <form action="/products/{{this.id}}/delete" method="POST" style="display:inline"
                                          onsubmit="return confirm('¿Seguro que deseas eliminar este producto?')">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                    No hay productos cargados aún.
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
