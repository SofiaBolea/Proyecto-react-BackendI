{{!-- Vista de listado de carritos con botón para crear nuevos registros. --}}
<header class="text-center mb-4">
    <h1 class="display-5 text-primary">
        <i class="fas fa-shopping-cart"></i> Gestión de Carritos
    </h1>
</header>

<div class="row justify-content-center">
    <div class="col-md-8">
        {{!-- Botón crear carrito --}}
        <form action="/carts" method="POST" class="mb-3">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Crear Nuevo Carrito
            </button>
        </form>

        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <span><i class="fas fa-shopping-cart"></i> Listado de Carritos</span>
                <span class="badge bg-light text-dark">{{carts.length}} carritos</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-id-card"></i> ID del Carrito</th>
                                <th><i class="fas fa-cubes"></i> Productos</th>
                                <th class="text-end"><i class="fas fa-cogs"></i> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each carts}}
                            <tr>
                                <td><small class="text-muted">{{this.id}}</small></td>
                                <td>{{this.products.length}} productos</td>
                                <td class="text-end">
                                    <a href="/carts/{{this.id}}" class="btn btn-sm btn-info me-1">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                    <form action="/carts/{{this.id}}/delete" method="POST" style="display:inline"
                                          onsubmit="return confirmDeleteCart(event, this)">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    <i class="fas fa-shopping-cart fa-2x mb-2 d-block"></i>
                                    No hay carritos creados aún. ¡Crea uno!
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
